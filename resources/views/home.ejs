<!-- food menus -->
<section class="food__menus" id="menuItems">
  <h1>Our FOOD Items</h1>
  <div class="food__cards__container">
    <% menuItems.forEach((menuItem,index)=>{ %>
    <div
      class="food__card"
      data-aos="<%= (index % 2 == 0) ? 'fade-up-right': 'fade-up-left' %>"
    >
      <img src="Images/<%= menuItem.image %>" alt="error" />
      <h3><%= menuItem.name %></h3>
      <p>
        Lorem ipsum dolor, sit amet consectetur adipisicing elit. Recusandae,
        aut?
      </p>
      <div class="food__perchase">
        <h4>$<%= menuItem.price %></h4>
        <% if(user){ %>
        <button
          data-food="<%= JSON.stringify(menuItem) %>"
          class="addcart__button"
        >
          Add to cart
        </button>
        <% } else { %>
        <button class="addcart__button">
          <a href="/login" class="login__toAdd">Login to Add </a>
        </button>
        <% } %>
      </div>
    </div>
    <% }) %>
  </div>
</section>
<!-- end of food menu section -->

