<!-- feedback form -->
<section id="feedback__section" class="feedback__section">
  <div class="feedback__div">
    <h1 style="text-align: center">Give Us feedback</h1>
    <form action="/feedback" method="POST" class="feedback__form">
      <% if(messages.error) { %>
      <span style="color: crimson"><%= messages.error %></span>
      <% } %>

      <div class="input__box" data-aos="slide-right">
        <input name="foodName" type="text" placeholder="Food Name" required />
      </div>
      <div class="input__box" data-aos="slide-left">
        <!-- <input type="number" min="0" max="5" placeholder="Give Ratings"/> -->
        <select name="ratings" class="input__select" required>
          <option value="">Select Ratings</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
      <div class="input__box" data-aos="slide-right">
        <textarea
          name="review"
          type="text"
          placeholder="Enter your review here"
        ></textarea>
      </div>
      <div class="feedback__submit__button__div" data-aos="slide-up">
        <button class="feedback__submit__button" type="submit">
          submit Feedback
        </button>
      </div>
    </form>
  </div>
</section>
<!-- feedback form end -->
