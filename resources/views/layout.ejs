  <body>
    <!-- navbar  -->
    <nav class="main__nav">
      <div class="main__nav__left">
        <a href="/"><img class="appLogo" src="/Images/Applogo.png" alt="" /></a>
        <h3>FOODLER</h3>
      </div>
      <div class="main__nav__right">
        <ul>
          <li><a class="navber__link" href="/">Home</a></li>
          <li><a class="navber__link" href="#about">About</a></li>
          <% if(user){ %>
          <li><a class="navber__link" href="/customers/orders">Orders</a></li>
          <li>
            <form id="logout" action="/logout" method="POST">
              <a
                onclick="document.getElementById('logout').submit()"
                href="#"
                class="navber__link"
                >Logout</a
              >
            </form>
          </li>
          <% }else{ %>
          <li><a class="navber__link" href="/register">register</a></li>
          <li><a class="navber__link" href="/login">Login</a></li>
          <% } %>
          <li class="list__cart">
            <a href="/cart"
              ><span id="cartCounter"
                ><%= (user && session.cart) ? session.cart.totalQty : ''
                %></span
              ><i class="fas fa-cart-plus"></i
            ></a>
          </li>
        </ul>
        <!-- <div class=navbar__cart>
                
            </div> -->
      </div>
